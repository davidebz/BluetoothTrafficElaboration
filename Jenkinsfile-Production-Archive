pipeline {
    agent any

    environment{
	BLUETOOTH_TRAFFIC_ELABORATION_PROPS=credentials('bluetoothtrafficelaboration-prod.properties')
    }
    stages {
	stage('Configure'){
	    steps{
		sh 'cat "${BLUETOOTH_TRAFFIC_ELABORATION_PROPS}" > src/main/resources/app.properties'
	    }
	}
        stage('Test') {
            steps {
               sh 'mvn clean test'
            }
        }
	stage('Build'){
            steps {
               sh 'mvn clean package'
            }
	}
	stage('Archive'){
            steps {
               sh 'cp target/bluetoothtrafficelaboration.war /var/builds/prod-server-dc/'
            }
	}
    }
}
